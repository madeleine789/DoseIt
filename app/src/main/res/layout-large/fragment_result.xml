<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/forTablet1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="45sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/whitesurface"
        android:elevation="2dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:weightSum="90"
        android:elevation="2dp">
        <TextView
            android:id="@+id/medicin_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="45dp"
            android:text="EXAMPLE MEDICINE"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:padding="20dp"
            />
        <TextView
            android:id="@+id/result_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="20 ml"
            android:textColor="#ffffff"
            android:layout_marginBottom="40dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/whitesurface"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/warning"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is a sample warning for sample medicine. Do not take it bcause you are going to die"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>